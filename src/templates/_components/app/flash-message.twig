{% set flashError = craft.app.session.getFlash('error') %}
{% set flashSuccess = craft.app.session.getFlash('success') %}
{% set flashNotice = craft.app.session.getFlash('notice') %}

{% if flashError %}
	<div class="p-4 text-sm text-red-700 bg-red-100 border border-red-300 {{ craft.fostercheckout.settings.branding.style|default('rounded') == 'flat' ? 'flat' : 'rounded-lg' }}">
		{{ flashError }}
	</div>
{% endif %}

{% if flashSuccess %}
	<div class="p-4 text-sm text-green-700 bg-green-100 border border-green-300 {{ craft.fostercheckout.settings.branding.style|default('rounded') == 'flat' ? 'flat' : 'rounded-lg' }}">
		{{ flashSuccess }}
	</div>
{% endif %}

{% if flashNotice %}
	<div class="p-4 text-sm text-blue-700 bg-blue-100 border border-blue-300 {{ craft.fostercheckout.settings.branding.style|default('rounded') == 'flat' ? 'flat' : 'rounded-lg' }}">
		{{ flashNotice }}
	</div>
{% endif %}
