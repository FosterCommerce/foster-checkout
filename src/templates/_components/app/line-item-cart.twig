{% set minQty = lineItem.purchasable.minQty %}
{% set maxQty = lineItem.purchasable.maxQty %}
{% set stock = lineItem.purchasable.stock %}
{% set unlimitedStock = (lineItem.purchasable.hasUnlimitedStock or lineItem.purchasable.allowOutOfStockPurchases) ? 1 : 0 %}

{% set hasImage = true %}
{% set imageSrcSet = null %}
{% set previewImage = craft.fostercheckout.lineItemImage(lineItem) %}
{% if previewImage|default %}
	{% if craft.app.plugins.isPluginEnabled('imager-x') %}
		{% set images = craft.imagerx.transformImage(
			previewImage,
			[
				{width:80, height:80},
				{width:200, height:200}
			],
			craft.fostercheckout.settings.options.imagerXConfig
		) %}

		{% set imageSrcSet = craft.imagerx.srcset(images) %}
	{% else %}
		{% set preview = {
			mode: 'crop',
			width: 200,
			height: 200,
			quality: 90,
			position: 'center-center'
		} %}
		{% set imageSrcSet = previewImage.getSrcSet(['80', '200']) %}
	{% endif %}
{% elseif craft.fostercheckout.settings.options.enablePlaceholderImages %}
	{% set placeHolderImage = 'https://placehold.co/200x200?text=' ~ 'misc.noImage'|t('foster-checkout')|split(' ')|join('+') %}
	{% set imageSrcSet = placeHolderImage ~ ' 200w' %}
{% else %}
	{% set hasImage = false %}
{% endif %}

<article
	x-data="LineItem({
		id: {{ lineItem.id }},
		qty: {{ lineItem.qty }},
		min: {{ minQty ?? 0 }},
		max: {{ maxQty ?? 0 }},
		stock: {{ stock }},
		unlimitedStock: {{ unlimitedStock }},
		removeLabel: '{{ 'cart.lineItem.removeFromCart'|t('foster-checkout')|e('js') }}',
		decreaseLabel: '{{ 'cart.lineItem.decreaseQuantity'|t('foster-checkout')|e('js') }}',
		increaseLabel: '{{ 'cart.lineItem.increaseQuantity'|t('foster-checkout')|e('js') }}',
		showErrorMaxMessage: false,
		showErrorMinMessage: false,
		showErrorStockMessage: false
	})"
	class="flex justify-between items-stretch gap-5 p-5 bg-gray-200 rounded-lg"
>

	{% if hasImage %}
		<div class="hidden sm:block w-[80px] min-w-[80px] max-w-[80px] md:w-[200px] md:min-w-[200px] md:max-w-[200px] flex-grow">
			<figure class="rounded-lg overflow-hidden min-w-full">
				<img
					srcset="{{ imageSrcSet }}"
					sizes="(min-width: 768px) 200px, 80px"
					width="200"
					height="200"
					class="min-w-full"
					alt="{{ 'misc.imageOf'|t('foster-checkout') ~ ' ' ~ lineItem.description }}"
				/>
			</figure>
		</div>
	{% endif %}

	<div class="flex flex-col justify-between items-stretch gap-10 flex-grow">

		<div class="flex justify-between items-start">

			<div class="pr-4">
				<h3 class="font-semibold">{{ lineItem.description }}</h3>
				<p class="mt-1 text-sm uppercase text-gray-500 break-all">{{ lineItem.sku }}</p>
				{% if lineItem.lineItemStatus %}
					<p class="mt-1 text-sm uppercase text-gray-500 break-all">{{ lineItem.lineItemStatus.name|t('foster-checkout') }}</p>
				{% endif %}

				{# Line item options #}

				{% for option in craft.fostercheckout.getLineItemOptions(lineItem) %}
					<p class="mt-3 text-sm uppercase text-gray-500">{{ option.name }}: {{ option.value }}</p>
				{% endfor %}


			</div>

			<div class="mt-0 flex flex-col-reverse gap-3 justify-start items-end md:w-1/2">

				<form
					id="lineItemQty-{{ lineItem.id }}"
					class="flex flex-col items-start items-end gap-2"
					method="post"
					x-on:submit="sending = true"
				>
					{{ csrfInput() }}
					{{ actionInput('commerce/cart/update-cart') }}

					<div class="inline-flex bg-white border border-gray-300 rounded-lg overflow-hidden">
						<!-- Persistent left control to avoid DOM swap issues -->
						<button
							type="button"
							class="flex justify-center items-center w-[38px] h-[38px] text-[var(--brandColor)]"
							:aria-label="qty <= 1 ? removeLabel : decreaseLabel"
							:disabled="sending"
							@mousedown="onButtonMouseDown()"
							@click="leftClick()"
						>
							<span>
								<span class="sr-only" x-text="qty <= 1 ? removeLabel : decreaseLabel"></span>
								<!-- trash icon when qty <= 1 -->
								<svg x-show="qty <= 1" xmlns="http://www.w3.org/2000/svg" width="18" height="20" viewBox="0 0 18 20" class="fill-current">
									<path d="M3.47723 19.1494C3.0156 19.1494 2.61532 18.9806 2.27638 18.6428C1.93745 18.305 1.76798 17.9062 1.76798 17.4462V3.29781H0.641357V1.59454H5.59843V0.736938H12.3957V1.59454H17.3588V3.29781H16.2321V17.4462C16.2321 17.9062 16.0627 18.305 15.7237 18.6428C15.3848 18.9806 14.9845 19.1494 14.5229 19.1494H3.47723ZM6.09733 15.344H7.69898V5.36901H6.09733V15.344ZM10.3011 15.344H11.9088V5.36901H10.3011V15.344Z"/>
								</svg>
								<!-- minus icon when qty > 1 -->
								<svg x-show="qty > 1" xmlns="http://www.w3.org/2000/svg" width="16" height="2" viewBox="0 0 16 2" class="fill-current">
									<path d="M0.850586 1.85163V0.148376H15.1555V1.85163H0.850586Z"/>
								</svg>
							</span>
						</button>

						<label for="qty_{{ lineItem.id }}" class="sr-only">{{ 'cart.lineItem.quantity'|t('foster-checkout') }}</label>
						<input
							name="lineItems[{{ lineItem.id }}][qty]"
							x-model.number="qty"
							id="qty_{{ lineItem.id }}"
							type="text"
							inputmode="numeric"
							pattern="[0-9]*"
							class="w-[38px] h-[38px] px-0 text-center border-none"
							@keydown.enter.prevent
							@input.debounce.700ms="input()"
							@blur="blur()"
						/>

						<button
							type="button"
							class="flex justify-center items-center w-[38px] h-[38px] text-[var(--brandColor)]"
							:aria-label="increaseLabel"
							:disabled="sending"
							@mousedown="onButtonMouseDown()"
							@click="increment()"
						>
							<span class="sr-only" x-text="increaseLabel"></span>
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" class="fill-current">
								<path d="M7.14841 8.85162H0.850586V7.14837H7.14841V0.844543H8.85166V7.14837H15.1555V8.85162H8.85166V15.1494H7.14841V8.85162Z"/>
							</svg>
						</button>
					</div>

					<p x-cloak x-show="sending" class="inline-flex justify-center items-center gap-1 text-sm text-gray-500">
						<svg aria-hidden="true" role="status" class="inline-block w-4 h-4 me-3 text-gray-300 animate-spin"
								 viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
							<path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="#000000"/>
						</svg>
						<template x-if="action === 'remove'">
							<span class="inline-block">{{ 'cart.lineItem.removing'|t('foster-checkout') }}</span>
						</template>
						<template x-if="action !== 'remove'">
							<span class="inline-block">{{ 'cart.lineItem.updating'|t('foster-checkout') }}</span>
						</template>
					</p>

					<div class="relative w-full">
						<template x-if="showErrorMinMessage">
							<p class="text-red-700 text-sm text-right absolute top-[100%] w-full">
								{{ 'cart.lineItem.minQtyMessage'|t('foster-checkout', params = { qty: minQty }) }}
							</p>
						</template>

						<template x-if="showErrorMaxMessage">
							<p class="text-red-700 text-sm text-right absolute top-[100%] w-full">
								{{ 'cart.lineItem.maxQtyMessage'|t('foster-checkout', params = { qty: maxQty}) }}
							</p>
						</template>

						<template x-if="showErrorStockMessage">
							<p class="text-red-700 text-sm text-right absolute top-[100%] w-full">
								{{ 'cart.lineItem.limitedStock'|t('foster-checkout', params = { qty: stock }) }}
							</p>
						</template>
					</div>
				</form>

				<div class="mt-0 text-right">
					{% if lineItem.getDiscount() %}
						<p>
							{% for adjustment in lineItem.getAdjustments() %}
								{% if adjustment.type == 'discount' %}
									<span class="text-sm text-[var(--brandColor)]">
										{{ 'summary.discountLabel'|t('foster-checkout') }}: {{ adjustment.name|raw }}
									</span><br>
								{% endif %}
							{% endfor %}
							<span class="text-lg font-semibold">{{ lineItem.totalAsCurrency }}</span>
						</p>
						<p class="text-sm text-gray-500">
							{% if lineItem.getOnPromotion() or lineItem.purchasable.getSales()|length %}
								{{ 'summary.onSaleLabel'|t('foster-checkout') }}: {{ (lineItem.salePrice * lineItem.qty) | commerceCurrency }}<br>
							{% endif %}
							{{ 'summary.originalPriceLabel'|t('foster-checkout') }}: <span class="line-through">{{ (lineItem.price * lineItem.qty) | commerceCurrency }}</span>
						</p>
					{% elseif lineItem.getOnPromotion() or lineItem.purchasable.getSales()|length %}
						<p>
							<span class="text-sm text-gray-500">
								{{ 'summary.onSaleLabel'|t('foster-checkout') }}
							</span><br>
							<span class="text-sm text-[var(--brandColor)]">
								-{{ ((lineItem.salePrice / lineItem.price)|round(2) * 100) }}%
							</span>
							<span class="text-lg font-semibold">{{ lineItem.totalAsCurrency }}</span>
						</p>
					{% else %}
						<p class="font-semibold"><span>{{ lineItem.totalAsCurrency }}</span></p>
					{% endif %}

				</div>

			</div>

		</div>

		<footer class="hidden md:block flex flex-col justify-between items-start gap-3">
			{% if not lineItem.purchasable.hasUnlimitedStock and not lineItem.purchasable.allowOutOfStockPurchases %}
				<p class="text-sm font-medium text-gray-500">
					{{ 'cart.lineItem.limitedStock'|t('foster-checkout', params = { qty: lineItem.purchasable.stock }) }}
				</p>
			{% endif %}

			<div class="flex flex-col justify-between items-start gap-2 sm:flex-row sm:justify-start sm:items-center sm:gap-8">

				{% if craft.fostercheckout.settings.options.enableSaveForLater %}
					<button class="inline-flex justify-start items-center gap-2 text-sm underline text-gray-500 hover:no-underline hover:text-gray-700">
						<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14" class="fill-current">
							<path d="M6.99605 13.1188L6.24497 12.4424C5.05921 11.3566 4.08101 10.4194 3.31035 9.63079C2.53971 8.84215 1.92528 8.13683 1.46707 7.51484C1.00885 6.89286 0.68807 6.32855 0.504736 5.82191C0.321403 5.31526 0.229736 4.8024 0.229736 4.28333C0.229736 3.2541 0.575147 2.39341 1.26597 1.70126C1.95679 1.0091 2.81126 0.663025 3.82939 0.663025C4.46006 0.663025 5.04418 0.809042 5.58174 1.10108C6.1193 1.39311 6.59074 1.81714 6.99605 2.37318C7.46803 1.78381 7.9638 1.35144 8.48337 1.07608C9.00294 0.800709 9.56272 0.663025 10.1627 0.663025C11.1835 0.663025 12.0399 1.0091 12.7321 1.70126C13.4243 2.39341 13.7703 3.2541 13.7703 4.28333C13.7703 4.8024 13.6787 5.3146 13.4953 5.81993C13.312 6.32524 12.9912 6.88888 12.533 7.51086C12.0748 8.13284 11.4597 8.83881 10.6877 9.62879C9.91574 10.4188 8.93688 11.3566 7.75112 12.4424L6.99605 13.1188Z" fill="#6B7280"/>
						</svg>
						<span class="inline">{{ 'cart.lineItem.saveForLater'|t('foster-checkout') }}</span>
					</button>
				{% endif %}

				<button
					type="button"
					class="inline-flex justify-start items-center gap-2 text-sm underline text-gray-500 hover:no-underline hover:text-gray-700"
					:disabled="sending"
					@mousedown="onButtonMouseDown()"
					@click="remove()"
				>
					<svg xmlns="http://www.w3.org/2000/svg" width="12" height="14" viewBox="0 0 12 14" class="fill-current">
						<path d="M2.31807 13.0996C2.01032 13.0996 1.74346 12.9871 1.51751 12.7619C1.29155 12.5367 1.17857 12.2708 1.17857 11.9641V2.5319H0.42749V1.39638H3.73221V0.824646H8.26372V1.39638H11.5724V2.5319H10.8213V11.9641C10.8213 12.2708 10.7084 12.5367 10.4824 12.7619C10.2565 12.9871 9.9896 13.0996 9.68184 13.0996H2.31807ZM4.06481 10.5627H5.13257V3.9127H4.06481V10.5627ZM6.86734 10.5627H7.93909V3.9127H6.86734V10.5627Z" fill="#6B7280"/>
					</svg>
					<span class="inline">{{ 'cart.lineItem.remove'|t('foster-checkout') }}</span>
				</button>
			</div>
		</footer>

	</div>

</article>

{% js %}
document.addEventListener('alpine:init', () => {
	Alpine.data('LineItem', (opts) => ({
		// ----- state -----
		...opts,
		sending: false,
		action: 'update',
		postTimer: null,
		justClickedButton: false,

		// ----- derived limits -----
		get maxAllowed() {
			if (this.unlimitedStock) return this.max || Infinity
			const hardCap = this.max || Infinity
			return Math.min(hardCap, this.stock ?? 0)
		},

		// Keep qty within min, max, and stock. Also flips error flags.
		clamp(value) {
			let v = Number.isFinite(+value) ? +value : (this.min || 1)

			this.showErrorMinMessage = !!(this.min && v < this.min)
			if (this.showErrorMinMessage) v = this.min

			const limit = this.maxAllowed
			this.showErrorMaxMessage = Number.isFinite(limit) && v > limit
			if (this.showErrorMaxMessage) v = limit

			this.showErrorStockMessage = !this.unlimitedStock && v > (this.stock ?? 0)

			return v
		},

		// ----- UI actions -----

		// Left control: remove at 1, else decrement with debounce
		leftClick() {
			if (this.qty <= 1) {
				this.remove()
				return
			}
			this.qty = this.clamp(this.qty - 1)
			this.schedulePost()
		},

		// Right control: increment with debounce
		increment() {
			this.qty = this.clamp(this.qty + 1)
			this.schedulePost()
		},

		// Typing: clamp as you type, do not submit yet
		input() {
			this.qty = this.clamp(this.qty)
		},

		// Leaving the field: submit once with the final value
		blur() {
			if (this.justClickedButton) {
				this.justClickedButton = false
				return
			}
			this.clearPending()
			this.qty = this.clamp(this.qty)
			this.post('update')
		},

		onButtonMouseDown() {
			this.justClickedButton = true
		},

		// Remove from cart immediately
		remove() {
			this.clearPending()
			this.qty = 0
			this.post('remove')
		},

		// ----- debounce helpers -----
		schedulePost(delay = 500) {
			this.clearPending()
			this.postTimer = setTimeout(() => this.post('update'), delay)
		},

		clearPending() {
			if (!this.postTimer) return
			clearTimeout(this.postTimer)
			this.postTimer = null
		},

		// ----- submit -----
		post(actionType) {
			this.action = actionType
			this.$nextTick(() => {
				const input = this.$root.querySelector(
					`input[name="lineItems[${this.id}][qty]"]`
				)
				if (input) input.value = this.qty
				this.$root.querySelector('form')?.requestSubmit()
			})
		},
	}))
})
{% endjs %}

