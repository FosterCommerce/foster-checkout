<article>

	<h2 class="mb-6 text-xl font-bold text-gray-800 leading-snug">{{ 'summary.title'|t('foster-checkout') }}</h2>

	<dl class="grid grid-cols-1 gap-4">

		<div class="flex justify-between items-center gap-4">
			<dt class="text-gray-500">{{ 'summary.itemsLabel'|t('foster-checkout') }}</dt>
			<dd class="font-semibold text-right text-black">{{ order.itemSubtotalAsCurrency }}</dd>
		</div>

		{% if order.totalDiscount != 0 %}
			<div class="flex justify-between items-center gap-4">
				<dt class="text-gray-500">{{ 'summary.discountLabel'|t('foster-checkout') }}
					{% set discounts = order.getAdjustmentsByType('discount') %}
					{% if discounts|length %}
						<br/>
						{% set discountNames = [] %}
						{% for adjustment in discounts %}
							{% if adjustment.sourceSnapshot.allPurchasables == true %}
								{% set discountNames = discountNames|merge([adjustment.name]) %}
							{% endif %}
						{% endfor %}
						{% set discountNames = discountNames|unique %}
						{{ discountNames|join('<br />')|raw }}
					{% endif %}
				</dt>
				<dd class="text-right text-red-500">{{ order.totalDiscountAsCurrency }}</dd>
			</div>
		{% endif %}

		<div class="flex justify-between items-center gap-4">
			<dt class="text-gray-500">{{ 'summary.shippingLabel'|t('foster-checkout') }}</dt>
			<dd class="text-right text-black">{{ order.totalShippingCostAsCurrency }}</dd>
		</div>

		<div class="flex justify-between items-center gap-4">
			<dt class="text-gray-500">{{ 'summary.taxLabel'|t('foster-checkout') }}</dt>
			<dd class="text-right text-black">{{ order.totalTaxAsCurrency }}</dd>
		</div>

		{% if craft.app.plugins.isPluginEnabled('gift-voucher') %}
			{% set voucherAdjustments = order.adjustments|filter(adjustment => adjustment.type == 'voucher') %}
			{% if voucherAdjustments|length %}
				<hr class="border-t border-gray-300">
				{% for adj in voucherAdjustments %}
					{% set matches = adj.description|split('code ') %}
					{% set code = matches|length > 1 ? matches[1]|trim("'") : 'Voucher/Gift Card' %}
					<div class="flex justify-between items-center gap-4">
						<dt class="text-gray-500">
							{{ 'summary.discountApplied'|t('foster-checkout') }}
							<span class="block text-xs text-gray-400">{{ code }}</span>
						</dt>
						<dd class="text-right">
							{{ adj.amount|currency }}
						</dd>
					</div>
				{% endfor %}
				<hr class="border-t border-gray-300">
			{% endif %}
		{% endif %}

		<div class="flex justify-between items-center gap-4 mt-4">
			<dt class="font-semibold text-black">{{ 'summary.total'|t('foster-checkout') }}</dt>
			<dd class="font-semibold text-right text-black">{{ order.totalPriceAsCurrency }}</dd>
		</div>

	</dl>

</article>
